<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:cardCornerRadius="4dp"
        app:cardElevation="0.7dp"
        app:cardMaxElevation="1dp"
        app:cardPreventCornerOverlap="true"
        android:layout_margin="8dp"
        app:contentPadding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_MerekPerfume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="MerekPerfume"/>

            <TextView
                android:id="@+id/tv_NamaPerfume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_MerekPerfume"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="NamaPerfume"/>

            <TextView
                android:id="@+id/tv_DeskripsiPerfume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_NamaPerfume"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="DeskripsiPerfume"/>
            <TextView
                android:id="@+id/tv_JenisPerfume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_DeskripsiPerfume"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="JenisPerfume"/>

            <TextView
                android:id="@+id/tv_UkuranPerfume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_JenisPerfume"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="UkuranPerfume"/>

            <TextView
                android:id="@+id/tv_HargaPerfume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_UkuranPerfume"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="HargaPerfume"/>

            <TextView
                android:id="@+id/tv_GenderPerfume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_HargaPerfume"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="GenderPerfume"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>